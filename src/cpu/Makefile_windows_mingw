CC = gcc
LD = $(CC)

APP = ap26_windows.exe
BOINC_APP = ap26_windows_boinc.exe

SRC = AP26.c AP26.h MAKES.H CONST.H PrimeQ_x86.h

BOINC_DIR = ../../../boinc_64
BOINC_INC = -I$(BOINC_DIR)/include/boinc
BOINC_LIB = -L$(BOINC_DIR)/lib -lboinc_api -lboinc -lstdc++

CFLAGS =-O3 -m64
LDFLAGS = $(CFLAGS)

all : $(APP) $(BOINC_APP)

$(APP) : $(SRC)
	$(CC) $(CFLAGS) -c -o AP26.o AP26.c
	$(LD) $(LDFLAGS) -o $(APP) AP26.o

$(BOINC_APP) : $(SRC)
	$(CC) $(CFLAGS) -DBOINC $(BOINC_INC) -c -o AP26_boinc.o AP26.c
	$(LD) $(LDFLAGS) AP26_boinc.o $(BOINC_LIB) -o $(BOINC_APP)

clean :
	rm -f *.o $(APP) $(BOINC_APP)

