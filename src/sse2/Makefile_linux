CC = gcc
LD = $(CC)

APP = ap26_sse2_linux64

SRC = ../common/AP26.c AP26.h MAKES.H CONST.H PrimeQ_x86.h
OBJ = AP26.o

BOINC_DIR = ../../../boinc_64_707
BOINC_INC = -I$(BOINC_DIR)/include/boinc
BOINC_LIB = -L$(BOINC_DIR)/lib -lboinc_api -lboinc -lstdc++ -lpthread -lm

DFLAGS  = -DAP26_BOINC -DAP26_SSE2
CFLAGS  = -I . -O3 -m64
LDFLAGS = $(CFLAGS) -static

all : $(APP)

$(APP) : $(OBJ) 
	$(LD) $(LDFLAGS) $^ $(BOINC_LIB) -o $@

AP26.o : $(SRC)
	$(CC) $(DFLAGS) $(CFLAGS) $(BOINC_INC) -c -o $@ ../common/AP26.c

clean :
	rm -f *.o $(APP)

